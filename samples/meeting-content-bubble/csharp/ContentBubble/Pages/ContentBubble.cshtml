@page
@model Content_Bubble_Bot.Pages.ContentBubbleModel
@{
    ViewData["Title"] = "Layout";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<head>

    <title>Content Bubble</title>
    <style>
        .login {
            text-align: center;
        }
    </style>

</head>

<body>
    <script>
        microsoftTeams.initialize();
        function validateForm() {
            var selTitle = document.getElementById("reviewTitle").textContent;
            var selectedItems = {
                title: selTitle,
                userValue: document.querySelector('input[name="inputVal"]:checked').value
            }
            microsoftTeams.tasks.submitTask(selectedItems);
            return true;
        }


    </script>

    <div class="login" style="color:aliceblue;font-family:'Segoe UI';text-align:left">

        <form id="userLog" onSubmit="return validateForm()">

            <h3> Provide your Feedback!</h3>
            <b> <label id="reviewTitle">@Content_Bubble_Bot.Titles.Title?</label></b><br /><br />
            <input type="radio" id="yes" name="inputVal" value="yes">
            <label for="yes">Yes</label><br />
            <input type="radio" id="no" name="inputVal" value="no">
            <label for="no">No</label><br />
            <br />
            <input
                style="border-radius: 12px;display: inline-block;width:74px;height:29px;font-size:medium;text-align:center;align-items:center"
                type="submit" value="Submit">
        </form>
    </div>

</body>

</html>
